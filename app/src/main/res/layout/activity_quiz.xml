<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/_16sdp"
    tools:context=".QuizActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_14sdp"
        android:layout_marginRight="@dimen/_14sdp">

        <TextView
            android:id="@+id/question_indicator_textview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="@string/question_5_15"
            android:textStyle="bold" />

        <ImageView
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/_4sdp"
            android:layout_toStartOf="@id/timer_indicator_textview"
            android:src="@drawable/icon_timer"
            app:tint="@color/blue" />

        <TextView
            android:id="@+id/timer_indicator_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:text="5:45"
            android:textColor="@color/blue"
            android:textSize="18sp" />

    </RelativeLayout>

    <com.google.android.material.progressindicator.LinearProgressIndicator
        android:id="@+id/question_progress_indicator"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="@dimen/_8sdp"
        tools:progress="100" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/_16sdp">

        <TextView
            android:id="@+id/question_textview"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_105sdp"
            android:background="@drawable/roundcorner"
            android:backgroundTint="@color/blue"
            android:gravity="center"
            android:padding="@dimen/_8sdp"
            android:text="Question"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btn0"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="@dimen/_sdp"
            android:backgroundTint="@color/gray"
            android:gravity="center_vertical"
            android:paddingVertical="@dimen/_10sdp"
            android:textColor="@color/black"
            android:textSize="18sp"
            tools:text="Ans A" />

        <Button
            android:id="@+id/btn1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="@dimen/_8sdp"
            android:backgroundTint="@color/gray"
            android:gravity="center_vertical"
            android:paddingVertical="@dimen/_10sdp"
            android:text="Ans B"
            android:textColor="@color/black"
            android:textSize="18sp" />

        <Button
            android:id="@+id/btn2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="@dimen/_8sdp"
            android:backgroundTint="@color/gray"
            android:gravity="center_vertical"
            android:paddingVertical="@dimen/_10sdp"
            android:text="Ans C"
            android:textColor="@color/black"
            android:textSize="18sp" />

        <Button
            android:id="@+id/btn3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="@dimen/_8sdp"
            android:backgroundTint="@color/gray"
            android:gravity="center_vertical"
            android:paddingVertical="@dimen/_10sdp"
            android:text="Ans D"
            android:textColor="@color/black"
            android:textSize="18sp" />


        <Button
            android:id="@+id/next_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_gravity="end"
            android:layout_marginVertical="@dimen/_4sdp"
            android:gravity="center_vertical"
            android:paddingHorizontal="@dimen/_50sdp"
            android:paddingVertical="@dimen/_10sdp"
            android:text="Next"
            android:textSize="20sp"/>


    </LinearLayout>
</LinearLayout>